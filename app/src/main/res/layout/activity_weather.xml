                                android:textStyle="bold"
                                android:id="@+id/WeatherDewPoint"
                                android:fontFamily="@font/nunito"
                                android:gravity="start"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Clouds: "
                                android:textStyle="bold"
                                android:textColor="#A8D0F0"
                                android:fontFamily="@font/nunito"
                                android:gravity="center|start"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clouds"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:id="@+id/weatherClouds"
                                android:fontFamily="@font/nunito"
                                android:gravity="start"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:baselineAligned="false" 
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Sun Rise: "
                                android:textColor="#A8D0F0"
                                android:textStyle="bold"
                                android:fontFamily="@font/nunito"
                                android:gravity="center|start"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sun Rise"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:id="@+id/weatherSunRise"
                                android:fontFamily="@font/nunito"
                                android:gravity="start"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Sun Set: "
                                android:textStyle="bold"
                                android:textColor="#A8D0F0"
                                android:fontFamily="@font/nunito"
                                android:gravity="center|start"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sun Set"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:id="@+id/weatherSunSet"
                                android:fontFamily="@font/nunito"
                                android:gravity="start"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Rain: "
                            android:textStyle="bold"
                            android:textColor="#A8D0F0"
                            android:fontFamily="@font/nunito"
                            android:gravity="center|start"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rain"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:id="@+id/weatherRain"
                            android:fontFamily="@font/nunito"
                            android:gravity="start"/>

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/weather_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

            <include layout="@layout/error_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>


        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
